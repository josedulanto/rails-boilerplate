- if resource_class.omniauth_providers.any?
  .ui.horizontal.divider or
  - if devise_mapping.omniauthable?
    - resource_class.omniauth_providers.each do |provider|
      = link_to omniauth_authorize_path(resource_name, provider), class: "ui circular #{omniauth_provider_icon(provider)} large icon button with-popup", title: omniauth_provider_name(provider), data: { position: "bottom center" } do
        %i{class: "#{omniauth_provider_icon(provider)} icon"}